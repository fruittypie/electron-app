{
  "name": "skeepers-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/electron/main.js",
  "build": {
  "appId": "com.freepie.freebie-catcher",
  "productName": "Freebie Grabber",
  "files": [
    "dist-react/**/*",
    "src/electron/main.js",
    "src/electron/preload.cjs",
    "src/electron/pathResolver.js",
    "src/electron/util.js",
    "src/electron/scraper/**/*",
    "server/**/*",
    ".env"
  ]
},
  "scripts": {
    "clean": "rimraf dist",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist:mac": "npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:linux": "npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.10.0",
    "discord.js": "^14.19.3",
    "jsonwebtoken": "^9.0.2",
    "keytar": "^7.9.0",
    "pg": "^8.15.6",
    "pg-hstore": "^2.3.4",
    "puppeteer": "^24.8.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sequelize": "^6.37.7",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "os-utils": "^0.0.14",
    "rimraf": "^6.0.1",
    "vite": "^6.2.0"
  }
}
